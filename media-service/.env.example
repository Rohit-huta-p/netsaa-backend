# ============================================================
# MEDIA-SERVICE ENVIRONMENT CONFIGURATION
# ============================================================
# Copy this file to .env and fill in actual values.
# NEVER commit .env to version control.
# ============================================================

# ------------------------------------------------------------
# APP CONFIGURATION
# ------------------------------------------------------------
NODE_ENV=development
PORT=4005
SERVICE_NAME=media-service

# ------------------------------------------------------------
# MONGODB
# ------------------------------------------------------------
# Connection string to MongoDB Atlas (shared across services)
MONGO_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/netsa?retryWrites=true&w=majority

# ------------------------------------------------------------
# JWT AUTHENTICATION
# ------------------------------------------------------------
# Must match the secret used by users-service
JWT_SECRET=

# ------------------------------------------------------------
# AWS S3 CONFIGURATION
# ------------------------------------------------------------
# IAM credentials with limited S3 permissions (PutObject, GetObject)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS region for S3 bucket
AWS_REGION=ap-south-1

# S3 bucket name (environment-specific)
# dev:     netsa-media-dev
# staging: netsa-media-staging
# prod:    netsa-media-prod
AWS_S3_BUCKET=netsa-media-dev

# ------------------------------------------------------------
# CDN CONFIGURATION (Optional)
# ------------------------------------------------------------
# CloudFront distribution URL (leave empty for development)
# Example: https://d1234567890.cloudfront.net
CDN_BASE_URL=

# ------------------------------------------------------------
# UPLOAD CONFIGURATION
# ------------------------------------------------------------
# Pre-signed URL expiry in seconds (default: 10 minutes)
PRESIGN_EXPIRY_SECONDS=600

# ------------------------------------------------------------
# FILE SIZE LIMITS (in bytes)
# ------------------------------------------------------------
# These override default limits per file type
MAX_IMAGE_SIZE_BYTES=10485760
MAX_VIDEO_SIZE_BYTES=104857600
MAX_DOCUMENT_SIZE_BYTES=20971520

# ------------------------------------------------------------
# CORS
# ------------------------------------------------------------
# Comma-separated list of allowed origins (use * for development)
CORS_ORIGINS=*
